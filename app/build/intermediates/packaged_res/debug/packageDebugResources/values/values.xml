<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="alarm_color_1">#FF10B981</color>
    <color name="alarm_color_2">#FF3B82F6</color>
    <color name="alarm_color_3">#FFEF4444</color>
    <color name="alarm_color_4">#FFF59E0B</color>
    <color name="alarm_color_5">#FF8B5CF6</color>
    <color name="alarm_color_6">#FF06B6D4</color>
    <color name="alarm_color_7">#FFEC4899</color>
    <color name="alarm_color_8">#FF84CC16</color>
    <color name="app_background">#FFF8FAFC</color>
    <color name="black">#FF000000</color>
    <color name="primary_blue">#FF2563EB</color>
    <color name="primary_blue_dark">#FF1D4ED8</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">NapSafe</string>
    <string name="google_maps_key">${MAPS_API_KEY}</string>
    <style name="Theme.LocationAlarm" parent="Theme.Material3.DayNight.NoActionBar">
        
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:windowSplashScreenBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>

        
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.LocationAlarm.Splash" parent="Theme.SplashScreen">
        
        <item name="windowSplashScreenBackground">@drawable/splash_background</item>

        
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_animated_logo</item>

        
        <item name="windowSplashScreenAnimationDuration">1200</item>

        
        <item name="postSplashScreenTheme">@style/Theme.LocationAlarm</item>

        
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>

        
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>