<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable" xmlns:aapt="http://schemas.android.com/aapt">
        <vector android:width="120dp" android:height="120dp" android:viewportWidth="120" android:viewportHeight="120">
            <!-- Animated pulse rings -->
            <group android:name="pulseGroup" android:pivotX="60" android:pivotY="60">
                <path
                    android:name="outerRing"
                    android:pathData="M60,10 A50,50 0 1,1 60,110 A50,50 0 1,1 60,10 Z"
                    android:strokeColor="#40FFFFFF"
                    android:strokeWidth="2"
                    android:fillColor="@android:color/transparent" />
            </group>

            <group android:name="pulseGroup2" android:pivotX="60" android:pivotY="60">
                <path
                    android:name="middleRing"
                    android:pathData="M60,20 A40,40 0 1,1 60,100 A40,40 0 1,1 60,20 Z"
                    android:strokeColor="#60FFFFFF"
                    android:strokeWidth="2"
                    android:fillColor="@android:color/transparent" />
            </group>

            <!-- Main logo circle -->
            <group android:name="logoGroup" android:pivotX="60" android:pivotY="60">
                <path
                    android:name="mainCircle"
                    android:pathData="M60,30 A30,30 0 1,1 60,90 A30,30 0 1,1 60,30 Z"
                    android:fillColor="#FFFFFF" />

                <!-- Location pin -->
                <path
                    android:name="locationPin"
                    android:pathData="M60,45 C56.13,45 53,48.13 53,52 C53,57.25 60,65 60,65 S67,57.25 67,52 C67,48.13 63.87,45 60,45 Z M60,54.5 C58.62,54.5 57.5,53.38 57.5,52 S58.62,49.5 60,49.5 S62.5,50.62 62.5,52 S61.38,54.5 60,54.5 Z"
                    android:fillColor="#2563EB" />

                <!-- Small alarm bell -->
                <path
                    android:name="alarmBell"
                    android:pathData="M68,58 C68.55,58 69,57.55 69,57 V54 C69,52.24 67.88,50.64 66.25,50.16 V49.5 C66.25,48.81 65.69,48.25 65,48.25 S63.75,48.81 63.75,49.5 V50.16 C62.12,50.64 61,52.24 61,54 V57 C61,57.55 61.45,58 62,58 H68 Z M65,59 C65.55,59 66,59.45 66,60 H64 C64,59.45 64.45,59 65,59 Z"
                    android:fillColor="#F59E0B" />
            </group>
        </vector>
    </aapt:attr>

    <!-- Pulse animation for outer ring -->
    <target android:name="pulseGroup">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="2000"
                    android:valueFrom="0.8"
                    android:valueTo="1.2"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="2000"
                    android:valueFrom="0.8"
                    android:valueTo="1.2"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="2000"
                    android:valueFrom="0.3"
                    android:valueTo="0.8"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse" />
            </set>
        </aapt:attr>
    </target>

    <!-- Pulse animation for middle ring (offset) -->
    <target android:name="pulseGroup2">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="2000"
                    android:valueFrom="0.9"
                    android:valueTo="1.1"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:startOffset="500"
                    android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="2000"
                    android:valueFrom="0.9"
                    android:valueTo="1.1"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:startOffset="500"
                    android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="2000"
                    android:valueFrom="0.4"
                    android:valueTo="0.9"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:startOffset="500" />
            </set>
        </aapt:attr>
    </target>

    <!-- Gentle bounce for main logo -->
    <target android:name="logoGroup">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="1500"
                    android:valueFrom="0.95"
                    android:valueTo="1.05"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="1500"
                    android:valueFrom="0.95"
                    android:valueTo="1.05"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>