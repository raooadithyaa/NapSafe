<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Beautiful gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#2563EB"
                android:centerColor="#3B82F6"
                android:endColor="#1D4ED8"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle pattern overlay -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#10FFFFFF"
                android:centerColor="#05FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>